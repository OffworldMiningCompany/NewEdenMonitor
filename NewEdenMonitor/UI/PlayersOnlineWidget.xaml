<UserControl x:Class="NewEdenMonitor.UI.PlayersOnlineWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:NewEdenMonitor="clr-namespace:NewEdenMonitor"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="440" Background="#3F000000">
    <UserControl.Resources>
        <NewEdenMonitor:NumberConverter x:Key="NumberConverter" />
    </UserControl.Resources>
    <Grid>
        <Label Content="PLAYERS ONLINE" FontFamily="../Resources/#Play" Margin="0" VerticalAlignment="Top" HorizontalContentAlignment="Right"  FontSize="24" Foreground="White" Width="440" Height="39" FontWeight="Bold" />
        <Label Name="Test" Content="{Binding ServerStatus.PlayersOnline, FallbackValue=123456, Converter={StaticResource NumberConverter}}" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" 
               HorizontalAlignment="Right" Margin="0,28,0,0" VerticalAlignment="Top" Width="440" Height="92" Foreground="White" FontSize="60" FontFamily="../Resources/#Play" />
    </Grid>
</UserControl>
