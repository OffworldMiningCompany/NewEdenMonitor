<UserControl x:Class="NewEdenMonitor.UI.ServerStatusWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewEdenMonitor.UI" xmlns:NewEdenMonitor="clr-namespace:NewEdenMonitor"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="440" Background="#3F000000">
    <UserControl.Resources>
        <NewEdenMonitor:OnlineOfflineConverter x:Key="OnlineOfflineConverter" />
    </UserControl.Resources>
    <Grid>
        <Label Content="TRANQUILITY STATUS" Margin="0" VerticalAlignment="Top" HorizontalContentAlignment="Right"  FontSize="16" FontFamily="Segoe UI Semibold" FontWeight="Bold" Foreground="White" Width="440" Height="31" Grid.RowSpan="2" />
        <Label Name="Test" Content="{Binding ServerStatus.ServerOpen, Converter={StaticResource OnlineOfflineConverter}}" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" 
               HorizontalAlignment="Right" Margin="0,44,0,0" VerticalAlignment="Top" Width="440" Height="72" Foreground="White" FontSize="48" Grid.Row="1"/>
    </Grid>
</UserControl>
