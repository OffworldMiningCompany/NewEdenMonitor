<Window x:Class="NewEdenMonitor.UI.MainWindow" x:Name="MainWindowName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Eden Monitor" Height="350" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="..\Resources\bg4.png"></ImageBrush>
    </Window.Background>
    <DockPanel>
        <Menu x:Name="MenuBar" DockPanel.Dock="Top" >
            <MenuItem Header="_File">
                <MenuItem Header="_Add characters..."  Click="MenuItemAddCharacters_Click"/>
                <Separator />
                <MenuItem Header="_Exit"  Click="MenuItemExit_Click"/>
            </MenuItem>
        </Menu>
        <ListBox Name="Contents" BorderBrush="{x:Null}" Background="Transparent" />
    </DockPanel>
</Window>
